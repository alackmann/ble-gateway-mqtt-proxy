# BLE Gateway Data Processor Configuration
# Copy this file to .env and configure your settings

# HTTP Server Configuration
SERVER_PORT=8000

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=blegateways/
MQTT_QOS=1
MQTT_RETAIN=false

# Logging Configuration
LOG_LEVEL=info

# Home Assistant Integration
HA_ENABLED=false
HA_DISCOVERY_TOPIC_PREFIX=homeassistant
# Define BLE devices to be discovered by Home Assistant
# Format: MAC address without colons, followed by a friendly name
# Example: HA_BLE_DEVICE_1=123b6a1b85ef,Car Token
HA_BLE_DEVICE_1=
HA_BLE_DEVICE_2=
HA_BLE_DEVICE_3=
